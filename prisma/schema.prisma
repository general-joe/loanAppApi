generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String    @id @default(uuid())
  first_name  String
  last_name   String
  nickname    String?
  email       String    @unique
  password    String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  phoneNumber String
  request     loanrequest[]
}

model loanrequest {
  id     String @id @default(uuid())
  userId String
  user   user   @relation(fields: [userId], references: [id])
  amount Int
  status String  @default("pending")
  message String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
